              <span class="title title--small">{{ data.goal.description | default: data.goal.type | default: "Goal" }}</span>
              <div class="bg--white p--1 rounded w--full" style="box-sizing:border-box;">
                {% assign goal_pct = data.goal.current_amount | times: 100 | divided_by: data.goal.target_amount %}
                {% if goal_pct > 100 %}{% assign goal_pct = 100 %}{% endif %}
                <div class="progress-bar progress-bar--small mt--1">
                  <div class="track"><div class="fill" style="width:{{ goal_pct }}%;"></div></div>
                </div>
                <div class="flex mt--1" style="justify-content:flex-end;">
                  <span class="label label--small">{{ data.goal.current_amount }} / {{ data.goal.target_amount }}</span>
                </div>
              </div>
            </div>
          {% endif %}

          <div class="flex flex--row gap--xsmall w--full" style="box-sizing:border-box;margin-top:auto;align-items:stretch;">
            {% if show_stats == "yes" %}
              <div class="bg--gray-60 p--1 rounded flex flex--col text--left" style="flex-shrink:0;align-items:flex-start;">
                <span class="title title--small">Followers</span>
                <div class="bg--white p--1 rounded w--full" style="box-sizing:border-box;">
                  <span class="value value--xsmall lg:value--small value--tnums">{{ data.followers.display | default: "0" }}</span>
                </div>
              </div>
              {% if data.subscribers.total > 0 %}
              <div class="bg--gray-60 p--1 rounded flex flex--col text--left" style="flex-shrink:0;align-items:flex-start;">
                <span class="title title--small">Subs</span>
                <div class="bg--white p--1 rounded w--full" style="box-sizing:border-box;">
                  <span class="value value--xsmall lg:value--small value--tnums">{{ data.subscribers.display | default: "0" }}</span>
                </div>
              </div>
              {% endif %}
            {% endif %}
            {% if show_description == "yes" %}
              <div class="bg--gray-60 p--1 rounded flex flex--col text--left sm:portrait:hidden md:portrait:hidden" style="flex:1;min-width:0;overflow:hidden;align-items:stretch;">
                <span class="title title--small sm:hidden md:hidden">About</span>
                <div class="bg--white p--1 rounded w--full" style="box-sizing:border-box;flex:1;">
                  <span class="label label--small text--left" data-clamp="2">{{ data.user.description | default: "No description" }}</span>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      

      {% endif %}

      </div>
    {% endtemplate %}